<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Theme.HoursCalculator.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.HoursCalculator.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="ItemButtonStyle" parent="Widget.Material3.Button.TonalButton">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="Widget.HoursCalculator.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.HoursCalculator.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TransparentActivity" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DayButtonStyle" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/day_buttons</item>
        <item name="cornerRadius">10dp</item>
        <item name="subTextSize">14sp</item>
        <item name="subTextColor">?attr/colorSecondary</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:foreground">@drawable/day_overlay_drawable</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>