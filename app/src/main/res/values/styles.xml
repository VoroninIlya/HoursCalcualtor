<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Theme.HoursCalculator.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.HoursCalculator.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="ItemButtonStyle" parent="Widget.Material3.Button.TonalButton">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">60dp</item>
    </style>

</resources>