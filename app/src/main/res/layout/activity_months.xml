<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/months"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MonthsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_shape"
        android:minHeight="?attr/actionBarSize"
        android:textColor="?attr/colorOnPrimary"/>

    <TextView
        android:id="@+id/path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:text=">" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/months_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="0dp" >

                <FrameLayout
                    android:id="@+id/january_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/february_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/march_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/april_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/may_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/june_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/july_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/august_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/september_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/october_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/november_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/december_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_card" />
                </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>