<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/months"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MonthsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text=">" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/months_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/element"
            android:orientation="vertical" >

            <Button
                android:id="@+id/january_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/january_month"/>

            <Button
                android:id="@+id/february_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/february_month"/>

            <Button
                android:id="@+id/march_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/march_month"/>

            <Button
                android:id="@+id/april_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/april_month"/>

            <Button
                android:id="@+id/may_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/may_month"/>

            <Button
                android:id="@+id/june_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/june_month"/>

            <Button
                android:id="@+id/july_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/july_month"/>

            <Button
                android:id="@+id/august_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/august_month"/>

            <Button
                android:id="@+id/september_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/september_month"/>

            <Button
                android:id="@+id/october_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/october_month"/>

            <Button
                android:id="@+id/november_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/november_month"/>

            <Button
                android:id="@+id/december_btn"
                style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/december_month"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>