<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/months"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MonthsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:minHeight="?attr/actionBarSize" />

    <TextView
        android:id="@+id/path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:text=">" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        >

        <LinearLayout
            android:id="@+id/months_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">

                <com.svilvo.views.ItemButton
                    android:id="@+id/january_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/january_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/february_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/february_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/march_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/march_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/april_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/april_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/may_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/may_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/june_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/june_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/july_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/july_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/august_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/august_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/september_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/september_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/october_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/october_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/november_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/november_month"/>
            </LinearLayout>
            <LinearLayout
                style="@style/Widget.Material3.TabLayout.Secondary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal">
                <com.svilvo.views.ItemButton
                    android:id="@+id/december_btn"
                    style="@style/ItemButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="10dp"
                    app:subTextColor="?attr/colorPrimary"
                    app:topLeftText="@string/december_month"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>